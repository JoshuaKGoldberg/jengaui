{
  "name": "jenga-ui",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "yarn workspaces foreach run build",
    "build:types": "yarn workspaces foreach run build:types",
    "test": "jest --passWithNoTests",
    "serve": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "publish": "yarn workspaces foreach --no-private npm publish",
    "reset": "yarn clean && rm -rf node_modules .yarn/cache",
    "bump:stable": "yarn version apply --all",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:check": "yarn version check"
  },
  "dependencies": {
    "email-validator": "^2.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3",
    "tastycss-react": "^0.5.5",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.4.16",
    "@storybook/addon-docs": "^6.4.16",
    "@storybook/addon-essentials": "^6.4.16",
    "@storybook/addon-links": "^6.4.16",
    "@storybook/react": "^6.4.16",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.21",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-react": "^1.1.4",
    "babel-loader": "^8.2.3",
    "chai": "^4.3.6",
    "chromatic": "^6.4.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "storybook-builder-vite": "^0.1.14",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*",
    "packages/core/src/*",
    "packages/atoms/src/*"
  ],
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*": "prettier --write"
  }
}
