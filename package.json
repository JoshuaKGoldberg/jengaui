{
  "name": "jenga-ui",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "yarn workspaces foreach run build",
    "build:types": "yarn workspaces foreach run build:types",
    "test": "jest --passWithNoTests",
    "serve": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "publish:all": "lerna publish --no-verify-access",
    "publish:beta": "lerna publish --ignore-prepublish --ignore-scripts --canary --preid beta --dist-tag beta",
    "publish:dev": "run-s build:dev publish:beta"
  },
  "dependencies": {
    "clipboard-copy": "^4.0.1",
    "email-validator": "^2.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "tastycss": "^0.7.2",
    "tiny-invariant": "^1.2.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@mdx-js/react": "^2.1.1",
    "@storybook/addon-actions": "^6.5.6",
    "@storybook/addon-docs": "^6.5.6",
    "@storybook/addon-essentials": "^6.5.6",
    "@storybook/addon-links": "^6.5.6",
    "@storybook/builder-vite": "^0.1.36",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^6.5.6",
    "@storybook/testing-library": "^0.0.11",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^28.1.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "chromatic": "^6.5.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*",
    "packages/core/src/*",
    "packages/atoms/src/*"
  ],
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*": "prettier --write"
  }
}
