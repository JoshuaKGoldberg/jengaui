{
  "name": "jenga-ui",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "yarn workspaces foreach run build",
    "build:types": "yarn workspaces foreach run build:types",
    "test": "jest",
    "test-cover": "jest --coverage",
    "test-watch": "jest --watch",
    "test-storybook": "test-storybook",
    "serve": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "publish:all": "lerna publish --no-verify-access",
    "publish:beta": "lerna publish --ignore-prepublish --ignore-scripts --canary --preid beta --dist-tag beta",
    "publish:dev": "run-s build:dev publish:beta"
  },
  "dependencies": {
    "clipboard-copy": "^4.0.1",
    "email-validator": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-transition-group": "^4.4.2",
    "styled-components": "^5.3.5",
    "tastycss": "^0.7.5",
    "tiny-invariant": "^1.2.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@mdx-js/react": "^2.1.2",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.1.38",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^6.5.9",
    "@storybook/test-runner": "^0.3.0",
    "@storybook/testing-library": "^0.0.13",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "chromatic": "^6.7.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-styled-components": "^7.0.8",
    "lerna": "^5.1.6",
    "lint-staged": "^13.0.3",
    "node-abort-controller": "^3.0.1",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*",
    "packages/core/src/*",
    "packages/atoms/src/*"
  ],
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*": "prettier --write"
  }
}
